
require-macros:
   earl-mocha ->
      describe, it, before, after
      xdescribe, xit
      assert, asserts
      before-each, after-each

require:
   ../src as qeg ->
      EarlGreyEvaluator
   quaint ->
      create

describe "quaint integration":

   before-each:
      @q = quaint.create{qeg}
      @q.setenv{"a", 555}

   it "simple expressions":
      assert @q.translate{"1 + 1 = {1 + 1}", .html} === "1 + 1 = 2"

   it "more complicated expressions":
      assert @q.translate{"{a = 6 + 6; a}", .html} === "12"

   it "declare and use variables":
      assert @q.translate{"{a = 6 + 6; null}Twelve is {a}", .html} === "Twelve is 12"

   it "eg specific code":
      assert @q.translate{"{1..5 each i -> i * i}", .html} === "1491625"

